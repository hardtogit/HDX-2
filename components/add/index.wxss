.add-container{
  height: 48rpx;
    width: 100%;
  position: relative;
  overflow: visible;
    padding: 12rpx 0 12rpx 0;
    z-index: 1000;
}
.add-container .add-icon{
    display: block;
    width: 48rpx;
    height: 48rpx;
    margin: 0 auto;
}
.add-container .pop{
   position: absolute;
   width: 400rpx;
   height: 80rpx;
   left:50%;
    top:80rpx;
   border-radius: 4rpx;
   background-color: #fff;
   box-shadow: 0 3rpx 6rpx -4rpx rgba(0, 0, 0, 0.12), 0 6rpx 16rpx 0 rgba(0, 0, 0, 0.08), 0 9rpx 28rpx 8rpx rgba(0, 0, 0, 0.05);
    transform: translate(-50%);
}
.add-container .pop .items{
    height: 80rpx;
    display: flex;
    align-items: center;
}
.add-container .pop .items .item{
    flex: 1;
    text-align: center;
    font-size: 20rpx;
}
.add-container .pop .items .item .img{
    width: 26rpx;
    height: 26rpx;
    display: block;
    margin: 0 auto;
}
.add-container .pop .items .item .text{
    margin-top: 4rpx;
}
page{
    background-color: #f5f5f5;
}
.arrow{
    z-index: 100;
    border: 16rpx solid transparent;
    border-bottom: 16rpx solid #fff;
    width: 0;
    height: 0;
    top:50rpx;
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    content: ' ';

}