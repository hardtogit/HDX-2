.header {
  position: relative;
  height: 160rpx;
  line-height: 100rpx;
  padding: 30rpx 30rpx 30rpx 150rpx;
  box-sizing: border-box;
  background: #fff;
  font-size: 28rpx;
  color: #000;
}

.header .thumb {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.header .about {
  float: right;
}

.header .erm {
  position: absolute;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #4bc46b;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  right: 0rpx;
  top: 40rpx;
  /* opacity: 0.9; */
}

.erm_1 {
  float: left;
  width: 40rpx;
  height: 60rpx;
  padding-top: 10rpx;
  padding-left: 30rpx;
}

.erm_1 image {
  width: 40rpx;
  height: 40rpx;
}

.erm_2 {
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  color: #fff;
  font-size: 28rpx;
}

.address-box {
  color: #999;
  line-height: 90rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  background: #fff;
}

.address-box .address-manage {
  position: relative;
  height: 90rpx;
  border-bottom: 1rpx solid #e9e9e9;
  text-align: center;
}

.address-box .address-manage::after {
  position: absolute;
  right: 30rpx;
  top: 34rpx;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #7f7f7f;
  border-right: 4rpx solid #7f7f7f;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}

.address-box .address-list {
  padding-left: 30rpx;
}

.address-box .address-list view {
  height: 90rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.address-box .address-list view:last-child {
  border-bottom: 0;
}

.orders-box {
  height: 246rpx;
  color: #262221;
  font-size: 26rpx;
  background: #fff;
  margin-top: 20rpx;
  border-top: 1rpx solid #e9e9e9;
  border-bottom: 1rpx solid #e9e9e9;
}

.orders {
  position: relative;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #e9e9e9;
  text-align: left;
  padding-left: 27rpx;
  font-weight: bold;
}

.orders::after {
  position: absolute;
  right: 30rpx;
  top: 36rpx;
  content: '';
  width: 6px;
  height: 6px;
  border-width: 2px 2px 0 0;
  border-top: 4rpx solid #7f7f7f;
  border-right: 4rpx solid #7f7f7f;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  border-color: #818282;
}

.orders2 {
  height: 156rpx;
  margin-top: 20rpx;
}

.orders2 .left {
  position: relative;
  float: left;
  width: 25%;
