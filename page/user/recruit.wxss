.box-feed3-1{
  position: relative;
  height: 112rpx;
  line-height: 112rpx;
  color: #000000;
  font-size: 28rpx;
  border-bottom: 1px solid #dfdfdf;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
.box-feed3-1 .con_msg1{
  position: absolute;
  width: 230rpx;
  height: 40rpx;
