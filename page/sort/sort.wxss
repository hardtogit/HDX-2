.fixc1{
  position: fixed;
  width: 750rpx;
  top: 0;
  left: 0;
  z-index: 100000;
  background: #ffffff;
}
.con_1L{
  float: left;
  width: 160rpx;
  height: 100%;
  background: #f6f6f6;
}
.dl_2{
  height: 90rpx;
}
.dl_1{
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 30rpx;
  color: #858585;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis; 
}
.con_1L .on{
  background: #ffffff;
  color: #03b347;
}
/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.con_1R{
  float: left;
  width: 590rpx;
  height: 100%;
}
.dl_3{
  position: relative;
  height: 190rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #f8f8f8;
}
.dl_3 button{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 999;
  border:none;
  opacity: 0;
}
.dl_3 .bg-x1{
  position: absolute;
  display: table;
  width:100%;
  height:190rpx;
  left: 0;
  top: 0;
  z-index: 9999;
  background: #000000;
  opacity: 0.3;
}
.dl_3 .txt-x1{
  transform:rotate(45deg);
  height: 190rpx;
  text-align: center;
  font-size:42rpx;
  color: #ffffff;
  display: table-cell;
	vertical-align: middle;
}
.dl_3L{
  float: left;
  width: 190rpx;
  height: 190rpx;
  text-align: center;
}
.dl_3L image{
  width: 165rpx;
  height: 165rpx;
  margin-top: 15rpx;
}
.dl_3R{
  position: relative;
  float: right;
  width: 400rpx;
  height: 190rpx;
}
.dl_3R_1{
  padding-top: 15rpx;
